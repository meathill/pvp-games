{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "useDefineForClassFields": true,
    "baseUrl": ".",
    "paths": {
      "@pvp-games/shared": ["packages/shared/src/index.ts"],
      "@pvp-games/shared/*": ["packages/shared/src/*"]
    }
  },
  "include": []
}
