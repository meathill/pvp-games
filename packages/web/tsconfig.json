{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "src",
    "outDir": "dist/types",
    "jsx": "react-jsx",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "paths": {
      "@pvp-games/games": ["../games/src/index.ts"],
      "@pvp-games/games/*": ["../games/src/*"]
    }
  },
  "include": ["src"],
  "exclude": [
    "vite.config.ts",
    "vitest.config.ts",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/test/**/*"
  ],
  "references": [
    { "path": "../games" }
  ]
}
